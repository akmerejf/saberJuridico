 <h3>Volumes</h3>
<% @volumes.each do |volume| %>


    <div class="col-md-4 column" style="max-width:100%">
     
       <br />
    <%= link_to image_tag("edicao1.gif"), volume %>
   <br />
    <br />
        Edição <%= volume.edicao %>
   <br />
        <% if current_admin.present? %>
       <%= link_to 'Exibir', volume, :class => "btn-xs btn-success" , role: "button"%>
       <%= link_to 'Editar', edit_volume_path(volume), :class => "btn-xs btn-primary", role: "button" %>
        <%= link_to 'Deletar', volume, method: :delete, data: { confirm: 'Você tem certeza?'}, :class => "btn-xs btn-danger" , role: "button"%>
        <% end %>
     </div>
    
    <% end %>
   <% if current_admin.present? %>
    <div class="col-md-10 column" style="margin-top: 20px;"><%= button_to 'Novo volume', new_volume_path, :class => "btn btn-primary btn-sm active", :method => :get %></div> 
   <% end %>

</div>


