<%- model_class = Volume -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @volume.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:autor) %>:</strong></dt>
  <dd><%= @volume.autor %></dd>
  <% if @volume.image? %>
  <%= link_to @volume.image.url %>
  <br />
  <%= link_to "Tamanho real", @volume.image.url %>
<% end %>
</dl>



<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              volumes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_volume_path(@volume), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              volume_path(@volume),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

</div>
